{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "lib": ["ESNext"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Debugging
    "pretty": true,

    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src"]
}
